<template name='stars'>
    <view class="stars-container">
      <view class="stars">
      <block wx:for="{{top.rating.stars}}" wx:for-item="i" wx:key="i">
          <image wx:if="{{i}}" class='stars-img' src='/images/icon/star.png'></image>
             <image wx:else  class='stars-img' src='/images/icon/none-star.png'></image>
       </block>
      </view>
     <text class="star-score">{{top.rating.average}}</text>
    </view>
</template>  
